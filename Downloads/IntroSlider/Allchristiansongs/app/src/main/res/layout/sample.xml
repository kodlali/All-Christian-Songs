<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sample"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_background_reverse"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_AboutApp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/popup_image1"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:paddingLeft="10dip"
            android:src="@drawable/aboutgame" >
        </ImageView>

        <TextView
            android:id="@+id/popup_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dip"
            android:textColor="@color/myColor"
            android:text="About Game" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_feedback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dip" >

        <ImageView
            android:id="@+id/popup_image2"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:paddingLeft="10dip"
            android:src="@drawable/feedback" >
        </ImageView>

        <TextView
            android:id="@+id/popup_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dip"
            android:textColor="@color/myColor"
            android:text="Suggestions" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_MoreApps"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dip" >

        <ImageView
            android:id="@+id/popup_image3"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:paddingLeft="10dip"
            android:src="@drawable/moreapps" >
        </ImageView>

        <TextView
            android:id="@+id/popup_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dip"
            android:textColor="@color/myColor"
            android:text="More Apps" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shareApp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dip" >

        <ImageView
            android:id="@+id/popup_image4"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:paddingLeft="10dip"
            android:src="@drawable/ic_menu_share" >
        </ImageView>

        <TextView
            android:id="@+id/popup_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dip"
            android:textColor="@color/myColor"
            android:text="Share" >
        </TextView>
    </LinearLayout>
    
